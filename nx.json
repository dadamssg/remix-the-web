{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "test": {
      "cache": true
    }
  },
  "release": {
    "projects": ["packages/*"],
    "projectsRelationship": "independent",
    "versionPlans": true,
    "version": {
      "generatorOptions": {
        "updateDependents": "auto"
      }
    }
  },
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": false
    }
  }
}
